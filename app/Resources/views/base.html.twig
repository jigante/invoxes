                        {#<form class="navbar-form pull-right">
                            <input class="span2" type="text" placeholder="Email">
                            <input class="span2" type="password" placeholder="Password">
                            <button type="submit" class="btn">Sign in</button>
                        </form>#}
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>

        <div class="container">

            <!-- Example row of columns -->
            <div class="row">
                <div class="span8">
                    <h2>{% block main_title %}Hello, world!{% endblock %}</h2>
                    {% block body %}
                        &nbsp:;
                    {% endblock %}
                </div>
                <div class="span4">
                    {% block right_column %}
                        <h3>Need Help?</h3>
                        <p>...</p>
                    {% endblock %}
                </div>
            </div>

            <hr>

            <footer>
                <p>&copy; Agile VPS Limited</p>
            </footer>

