{% extends '@AgileInvoice/one-column.html.twig' %}

{% block title %}{{ 'company.settings'|trans }} - {{ parent() }}{% endblock %}

{% block main_title %}{{ 'company.account.settings'|trans }}{% endblock %}

{% block body -%}
    <div class="settings-container">
        <h3>{{ 'company.account.preferences'|trans }}</h3>
        
        <dl class="settings-list dl-horizontal">
            <dt>{{ 'company.name'|trans }}</dt>
            <dd>{{ company.name }}</dd>
            <dt>{{ 'company.account_owner'|trans }}</dt>
            <dd>{{ company.owner.firstName ~ ' ' ~ company.owner.lastName }}</dd>
            <dt>{{ 'company.fiscal_year'|trans }}</dt>
            <dd>{{ 'company.fiscal_year.starts.in'|trans }} {{ company.fiscalYearStartMonth|trans }}</dd>
            <dt>{{ 'company.timezone'|trans }}</dt>
            <dd>{{ company.timezoneCity }}</dd>
            <dt>{{ 'company.date_format'|trans }}</dt>
            <dd>{{ reference_date|date(company.dateFormat) }}</dd>
            <dt>{{ 'company.currency'|trans }}</dt>
            <dd>{{ company.currencyNameAndSymbol }}</dd>
            <dt>{{ 'company.number_format'|trans }}</dt>
            <dd>{{ company.formattedNumber(1234.56)|raw }}</dd>
            <dt>{{ 'company.currency_symbol'|trans }}</dt>
            <dd class="hide-span">
                {{ 
                    company.currencyPlacement ?
                    'company.currency_placement.before_text'|trans|raw :
                    'company.currency_placement.after_text'|trans|raw
                }}
            </dd>
            <dt>{{ 'company.currency_code_suffix'|trans }}</dt>
            <dd class="hide-span">
                {{ 
                    company.includeCurrencyCode ? 
                    'company.currency_code_suffix.always_include'|trans|raw :
                    'company.currency_code_suffix.never_include'|trans|raw
                }}
            </dd>
            <dt>{{ 'company.color_scheme'|trans }}</dt>
            <dd>{{ company.colorScheme }}</dd>
            <dt>{{ 'company.logo'|trans }}</dt>
            <dd>{{ company.logo }}</dd>
        </dl>

        <a href="{{ path('company_preferences') }}" class="btn btn-small btn-success">{{ 'company.edit_preferences'|trans }}</a>
    </div>
{% endblock %}