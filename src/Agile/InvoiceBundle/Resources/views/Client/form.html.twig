{% form_theme form with 'AgileInvoiceBundle:Form:horizontal-fields.html.twig' %}

<form novalidate class="form-horizontal" action="{{ form_action }}" method="post" {{ form_enctype(form) }}>
    
    {# Se Ã¨ un form per l'editing, aggiungiamo il seguente campo #}
    {% if edit is defined %}
        <input type="hidden" name="_method" value="PUT" />
    {% endif %}

    {#{ form_widget(form) }#}
    {{ form_errors(form)}}

    {{ form_row(form.name, { 'attr': {'class': 'input-block-level'} }) }}
    {{ form_row(form.address, { 'attr': {'rows': 8, 'class': 'input-block-level'} }) }}
    {{ form_row(form.currency, { 'attr': {'class': 'input-block-level'} }) }}
    
    {{ form_rest(form) }}

    <input type="submit" value="Save" class="btn btn-success btn-small " />
    <a href="{{ path('client') }}" class="btn btn-small">Cancel</a>
</form>