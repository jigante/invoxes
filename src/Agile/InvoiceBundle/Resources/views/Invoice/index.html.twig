{% extends '@AgileInvoice/one-column.html.twig' %}

{% block title %}Invoices - {{ parent() }}{% endblock %}

{% block tips %}
    {% include('AgileInvoiceBundle:Invoice:tips.html.twig') %}
{% endblock %}

{% block main_title %}
    Invoices Overview

    <a href="#" data-show-div="invoice-first-step" data-focus-field="agile_invoice_invoice_first_step_client" class="btn btn-success btn-small">+ {{ 'create.invoice'|trans }}</a>

{% endblock %}

{% block body -%}
    <div id="invoice-first-step" class="well well-info" style="display:none">

        <form action="{{ path('invoice_new') }}" method="get">
            {{ form_widget(form) }}

            <input type="submit" value="Next Step" class="btn btn-success btn-small " />
            <a href="#" class="btn btn-small">Cancel</a>
        </form>
        
    </div>
{% endblock %}